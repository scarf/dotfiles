        01:[0-2][0-9]) echo "ğŸ•";; 01:[3-5][0-9]) echo "ğŸ•œ";;
        02:[0-2][0-9]) echo "ğŸ•‘";; 02:[3-5][0-9]) echo "ğŸ•";;
        03:[0-2][0-9]) echo "ğŸ•’";; 03:[3-5][0-9]) echo "ğŸ•";;
        04:[0-2][0-9]) echo "ğŸ•“";; 04:[3-5][0-9]) echo "ğŸ•Ÿ";;
